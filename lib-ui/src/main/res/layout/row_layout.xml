<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/row_layout_selected">

    <ImageView
        android:id="@+id/img_row_layout_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/row_layout_margin"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_row_layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_row_layout_icon"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_row_layout"
        android:layout_width="51dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_row_layout_more"
        android:layout_width="9dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_row_layout_more_right" />

    <TextView
        android:id="@+id/txt_row_layout_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/img_row_layout_more"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_row_layout_number"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/img_row_layout_more"
        android:background="@drawable/bg_circle_msg_number"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone" />
</RelativeLayout>
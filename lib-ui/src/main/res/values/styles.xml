<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!--dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="msv_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/search_view_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_view_icon_padding</item>
    </style>

    <declare-styleable name="custom_countdown_timer">
        <attr name="initial_text" format="string"/>
        <attr name="after_text" format="string"/>
        <attr name="interval" format="integer"/>
        <attr name="total_time" format="integer"/>
    </declare-styleable>

</resources>